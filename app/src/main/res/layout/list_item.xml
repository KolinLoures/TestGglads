<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@color/colorAccent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/primaryTextListItem"
            android:layout_width="match_parent"
            android:id="@+id/list_item_primary_text"
            android:layout_height="wrap_content"
            tools:text="Example" />

        <TextView
            style="@style/supportTextListItem"
            android:id="@+id/list_item_support_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Support text" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_votes"
        android:textSize="14sp"
        tools:text="+16"/>

</LinearLayout>